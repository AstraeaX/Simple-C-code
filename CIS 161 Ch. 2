#include <stdio.h>
#include <string.h>

int main(void) {
   int userInt;
   double userDouble;
   char userChar;
   char userString[20];
   
   printf("Enter integer:\n");
   scanf("%d", &userInt);
   
   printf("Enter double:\n"); // Note for later that this printf statement contains \n, a whitespace.
   scanf("%lf", &userDouble);
       
// scanf scans the whitespace from \n as your next input, requiring you to work around it.

   printf("Enter character:\n");
   scanf(" %c", &userChar); // To resolve this, add a whitespace like so: " %c" and not "%c".
   
   printf("Enter string:\n");
   scanf("%s", userString);
   
   printf("%d %lf %c %s\n", userInt, userDouble, userChar, userString);
   
   printf("%s %c %lf %d\n", userString, userChar, userDouble, userInt);
   
   int userDoubleToInt = (int)userDouble;
   
   printf("%lf cast to an integer is %d\n", userDouble, userDoubleToInt); 
   
   return 0;
}
